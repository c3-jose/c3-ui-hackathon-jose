---
import Layout from '../layouts/Layout.astro';
import Sidebar from '../components/Sidebar.svelte';
---

<Layout title="Analytics - Wind Turbine Management">
  <Sidebar client:load />
  <main class="flex-1 ml-80 transition-all duration-300 bg-base-200 min-h-screen overflow-x-hidden">
    <div class="container mx-auto px-6 py-8">
      <!-- Page Header -->
      <div class="mb-8">
        <h1 class="text-4xl font-bold text-base-content mb-2">Analytics Dashboard</h1>
        <p class="text-base-content/70">Comprehensive data analysis and insights for your wind turbine fleet</p>
      </div>

      <!-- Coming Soon Card -->
      <div class="card bg-base-100 shadow-xl">
        <div class="card-body p-16 text-center">
          <div class="mb-6">
            <div class="w-24 h-24 bg-gradient-to-br from-blue-500 to-purple-500 rounded-full mx-auto flex items-center justify-center mb-4">
              <svg class="w-12 h-12 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
              </svg>
            </div>
          </div>
          <h2 class="text-3xl font-bold text-base-content mb-4">Advanced Analytics Coming Soon</h2>
          <p class="text-base-content/70 mb-6 max-w-2xl mx-auto">
            We're building powerful D3.js visualizations to provide deep insights into your wind turbine performance, 
            predictive maintenance recommendations, and energy production analytics.
          </p>
          <div class="flex gap-4 justify-center">
            <a href="/" class="btn btn-primary">Return to Dashboard</a>
            <a href="/windturbines" class="btn btn-outline">View Turbines</a>
          </div>
        </div>
      </div>
    </div>
  </main>
</Layout>
