---
import Layout from '../layouts/Layout.astro';
import Sidebar from '../components/Sidebar.svelte';
---

<Layout title="Reports - Wind Turbine Management">
  <Sidebar client:load />
  <main class="flex-1 ml-80 transition-all duration-300 bg-base-200 min-h-screen overflow-x-hidden">
    <div class="container mx-auto px-6 py-8">
      <!-- Page Header -->
      <div class="mb-8">
        <h1 class="text-4xl font-bold text-base-content mb-2">Reports Center</h1>
        <p class="text-base-content/70">Generate and download comprehensive reports for your wind turbine operations</p>
      </div>

      <!-- Coming Soon Card -->
      <div class="card bg-base-100 shadow-xl">
        <div class="card-body p-16 text-center">
          <div class="mb-6">
            <div class="w-24 h-24 bg-gradient-to-br from-green-500 to-blue-500 rounded-full mx-auto flex items-center justify-center mb-4">
              <svg class="w-12 h-12 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
              </svg>
            </div>
          </div>
          <h2 class="text-3xl font-bold text-base-content mb-4">Automated Reporting Coming Soon</h2>
          <p class="text-base-content/70 mb-6 max-w-2xl mx-auto">
            We're developing comprehensive reporting capabilities including performance summaries, 
            maintenance schedules, financial analysis, and regulatory compliance reports.
          </p>
          <div class="flex gap-4 justify-center">
            <a href="/" class="btn btn-primary">Return to Dashboard</a>
            <a href="/windturbines" class="btn btn-outline">View Turbines</a>
          </div>
        </div>
      </div>
    </div>
  </main>
</Layout>
