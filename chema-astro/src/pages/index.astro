---
import Layout from '../layouts/Layout.astro';
import Sidebar from '../components/Sidebar.svelte';
import DashboardHero from '../components/DashboardHero.svelte';
import DashboardStats from '../components/DashboardStats.svelte';
import DashboardFleetMapLeaflet from '../components/DashboardFleetMapLeaflet.svelte';
import DashboardPowerChart from '../components/DashboardPowerChart.svelte';
---

<Layout title="Dashboard - Wind Turbine Management">
  <Sidebar client:load />
  <main class="flex-1 ml-80 transition-all duration-300 bg-base-200 overflow-x-hidden">
    <!-- Hero Section with Real Data -->
    <DashboardHero client:load />

    <!-- Floating Stats Section with Real Data -->
    <div class="container mx-auto px-6 -mt-8 relative z-30 mb-12">
      <DashboardStats client:load />
    </div>

    <!-- Main Content Area -->
    <div class="bg-base-100 min-h-screen">
      <div class="container mx-auto px-6 py-8">
        <!-- Overview Header -->
        <div class="mb-8">
          <div class="flex items-center justify-between mb-4">
            <div>
              <h2 class="text-3xl font-bold text-base-content">Fleet Overview</h2>
              <p class="text-base-content/60 mt-1">Real-time monitoring and management dashboard</p>
            </div>
            <div class="flex items-center gap-3">
              <div class="inline-flex items-center gap-2 px-3 py-1 bg-success/10 text-success rounded-full border border-success/20">
                <div class="w-2 h-2 bg-success rounded-full animate-pulse"></div>
                Live Data
              </div>
              <div class="text-sm text-base-content/60">
                Last updated: {new Date().toLocaleTimeString()}
              </div>
            </div>
          </div>
        </div>

        <!-- Quick Actions -->
        <div class="card bg-base-100 shadow-lg mb-8 border border-base-300">
          <div class="card-body p-6">
            <div class="flex items-center justify-between mb-6">
              <h3 class="text-2xl font-bold text-base-content">Quick Actions</h3>
              <div class="px-3 py-1 bg-base-200 text-base-content/60 rounded-full text-sm font-medium">Essential Tools</div>
            </div>
          <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
            <a href="/windturbines" class="group card bg-gradient-to-br from-blue-500 to-blue-600 text-white shadow-lg hover:shadow-xl transition-all duration-300 hover:-translate-y-1">
              <div class="card-body p-6 text-center">
                <div class="bg-white/20 p-3 rounded-full mx-auto mb-3 w-16 h-16 flex items-center justify-center group-hover:scale-110 transition-transform duration-300">
                  <svg class="w-8 h-8" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 2L13.09 8.26L22 9L13.09 9.74L12 16L10.91 9.74L2 9L10.91 8.26L12 2Z"/>
                  </svg>
                </div>
                <h3 class="font-semibold text-lg mb-1">View All Turbines</h3>
                <p class="text-blue-100 text-sm">Monitor fleet status</p>
              </div>
            </a>

            <a href="/analytics" class="group card bg-gradient-to-br from-purple-500 to-purple-600 text-white shadow-lg hover:shadow-xl transition-all duration-300 hover:-translate-y-1">
              <div class="card-body p-6 text-center">
                <div class="bg-white/20 p-3 rounded-full mx-auto mb-3 w-16 h-16 flex items-center justify-center group-hover:scale-110 transition-transform duration-300">
                  <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
                  </svg>
                </div>
                <h3 class="font-semibold text-lg mb-1">Analytics Dashboard</h3>
                <p class="text-purple-100 text-sm">Deep insights & trends</p>
              </div>
            </a>

            <a href="/reports" class="group card bg-gradient-to-br from-green-500 to-green-600 text-white shadow-lg hover:shadow-xl transition-all duration-300 hover:-translate-y-1">
              <div class="card-body p-6 text-center">
                <div class="bg-white/20 p-3 rounded-full mx-auto mb-3 w-16 h-16 flex items-center justify-center group-hover:scale-110 transition-transform duration-300">
                  <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                  </svg>
                </div>
                <h3 class="font-semibold text-lg mb-1">Generate Report</h3>
                <p class="text-green-100 text-sm">Automated reporting</p>
              </div>
            </a>

            <button class="group card bg-gradient-to-br from-gray-500 to-gray-600 text-white shadow-lg hover:shadow-xl transition-all duration-300 hover:-translate-y-1">
              <div class="card-body p-6 text-center">
                <div class="bg-white/20 p-3 rounded-full mx-auto mb-3 w-16 h-16 flex items-center justify-center group-hover:scale-110 transition-transform duration-300">
                  <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                  </svg>
                </div>
                <h3 class="font-semibold text-lg mb-1">System Settings</h3>
                <p class="text-gray-100 text-sm">Configure & optimize</p>
              </div>
            </button>
          </div>
        </div>
              </div>

        <!-- Performance Metrics Grid -->
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-6 mb-8">
                  <!-- Fleet Health -->
        <div class="card bg-base-100 shadow-lg border border-base-300">
            <div class="card-body p-6">
              <div class="flex items-center justify-between mb-4">
                <h3 class="text-lg font-semibold text-base-content">Fleet Health</h3>
                <div class="px-3 py-1 bg-green-50 text-green-700 rounded-full text-sm font-semibold border border-green-200">98.2%</div>
              </div>
              <div class="space-y-3">
                <div class="flex items-center justify-between">
                  <span class="text-sm text-base-content/60">Operational</span>
                  <span class="text-sm font-medium text-success">243 units</span>
                </div>
                <div class="flex items-center justify-between">
                  <span class="text-sm text-base-content/60">Maintenance</span>
                  <span class="text-sm font-medium text-warning">4 units</span>
                </div>
                <div class="flex items-center justify-between">
                  <span class="text-sm text-base-content/60">Offline</span>
                  <span class="text-sm font-medium text-error">1 unit</span>
                </div>
              </div>
              <div class="mt-4">
                <div class="w-full bg-base-300 rounded-full h-2">
                  <div class="bg-success h-2 rounded-full" style="width: 98.2%"></div>
                </div>
              </div>
            </div>
          </div>

          <!-- Energy Production -->
          <div class="card bg-base-100 shadow-lg border border-base-300">
            <div class="card-body p-6">
              <div class="flex items-center justify-between mb-4">
                <h3 class="text-lg font-semibold text-base-content">Today's Production</h3>
                <div class="px-3 py-1 bg-blue-50 text-blue-700 rounded-full text-sm font-semibold border border-blue-200">+8.3%</div>
              </div>
              <div class="text-3xl font-bold text-primary mb-2">2,847 MWh</div>
              <div class="text-sm text-base-content/60 mb-4">vs 2,629 MWh yesterday</div>
              <div class="flex items-center gap-4 text-sm">
                <div class="flex items-center gap-1">
                  <div class="w-3 h-3 bg-blue-500 rounded-full"></div>
                  <span>Peak: 1.2 GW</span>
                </div>
                <div class="flex items-center gap-1">
                  <div class="w-3 h-3 bg-green-500 rounded-full"></div>
                  <span>Avg: 0.95 GW</span>
                </div>
              </div>
            </div>
          </div>

          <!-- Weather Impact -->
          <div class="card bg-base-100 shadow-lg border border-base-300">
            <div class="card-body p-6">
              <div class="flex items-center justify-between mb-4">
                <h3 class="text-lg font-semibold text-base-content">Weather Conditions</h3>
                <div class="px-3 py-1 bg-purple-50 text-purple-700 rounded-full text-sm font-semibold border border-purple-200">Optimal</div>
              </div>
              <div class="space-y-3">
                <div class="flex items-center justify-between">
                  <span class="text-sm text-base-content/60">Wind Speed</span>
                  <span class="text-sm font-medium text-base-content">15.2 m/s</span>
                </div>
                <div class="flex items-center justify-between">
                  <span class="text-sm text-base-content/60">Direction</span>
                  <span class="text-sm font-medium text-base-content">SW 225°</span>
                </div>
                <div class="flex items-center justify-between">
                  <span class="text-sm text-base-content/60">Efficiency</span>
                  <span class="text-sm font-medium text-success">94.7%</span>
                </div>
              </div>
              <div class="mt-4 text-xs text-base-content/40">
                Forecast: Favorable conditions for next 6 hours
              </div>
            </div>
          </div>
        </div>

        <!-- Recent Activity & Performance -->
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
        <!-- Recent Activity -->
        <div class="card bg-base-100 shadow-xl border-0">
          <div class="card-body p-8">
            <div class="flex items-center justify-between mb-6">
              <h3 class="text-2xl font-bold text-base-content">Recent Activity</h3>
              <div class="badge badge-primary">Live</div>
            </div>
            <div class="space-y-6">
              <div class="flex items-start space-x-4 p-4 bg-green-50 rounded-xl hover:bg-green-100 transition-colors duration-200">
                <div class="flex-shrink-0">
                  <div class="w-12 h-12 bg-green-500 rounded-full flex items-center justify-center shadow-lg">
                    <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                    </svg>
                  </div>
                </div>
                <div class="flex-1 min-w-0">
                  <p class="font-semibold text-gray-900 mb-1">Routine maintenance completed</p>
                  <p class="text-sm text-green-600 font-medium">Turbine Eagle-008</p>
                  <p class="text-xs text-gray-500 mt-1">2 hours ago</p>
                </div>
              </div>
              
              <div class="flex items-start space-x-4 p-4 bg-orange-50 rounded-xl hover:bg-orange-100 transition-colors duration-200">
                <div class="flex-shrink-0">
                  <div class="w-12 h-12 bg-orange-500 rounded-full flex items-center justify-center shadow-lg">
                    <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L4.082 16.5c-.77.833.192 2.5 1.732 2.5z"></path>
                    </svg>
                  </div>
                </div>
                <div class="flex-1 min-w-0">
                  <p class="font-semibold text-gray-900 mb-1">Temperature alert triggered</p>
                  <p class="text-sm text-orange-600 font-medium">Turbine Falcon-018</p>
                  <p class="text-xs text-gray-500 mt-1">5 hours ago</p>
                </div>
              </div>
              
              <div class="flex items-start space-x-4 p-4 bg-blue-50 rounded-xl hover:bg-blue-100 transition-colors duration-200">
                <div class="flex-shrink-0">
                  <div class="w-12 h-12 bg-blue-500 rounded-full flex items-center justify-center shadow-lg">
                    <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
                    </svg>
                  </div>
                </div>
                <div class="flex-1 min-w-0">
                  <p class="font-semibold text-gray-900 mb-1">Performance report generated</p>
                  <p class="text-sm text-blue-600 font-medium">System</p>
                  <p class="text-xs text-gray-500 mt-1">1 day ago</p>
                </div>
              </div>
            </div>
            <div class="mt-6">
              <a href="/activity" class="btn btn-ghost btn-sm w-full">View All Activity →</a>
            </div>
          </div>
        </div>

        <!-- Power Output Chart with Real Data -->
        <DashboardPowerChart client:load />

      </div>
      
      <!-- Fleet Map Section - Full Width Outside Container -->
      <div class="w-full bg-base-200 px-6 py-8">
        <div class="max-w-7xl mx-auto">
          <DashboardFleetMapLeaflet client:load />
        </div>
      </div>
      
      <div class="container mx-auto px-6 py-8">

      </div>
    </div>
    </div>
  </main>
</Layout>