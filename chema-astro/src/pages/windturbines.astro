---
import Layout from '../layouts/Layout.astro';
import Sidebar from '../components/Sidebar.svelte';
import SimpleWindTurbineList from '../components/SimpleWindTurbineList.svelte';

const title = "Wind Turbines";
---

<Layout title={title}>
  <Sidebar client:load />
  <main class="flex-1 ml-80 transition-all duration-300 bg-base-200 overflow-x-hidden">
    <div class="container mx-auto px-6 py-8">
      <div class="mb-6">
        <h1 class="text-4xl font-bold text-base-content mb-2">Wind Turbines</h1>
        <p class="text-base-content/70">Manage and monitor your wind turbine fleet</p>
      </div>
      <SimpleWindTurbineList client:load />
    </div>
  </main>
</Layout>
